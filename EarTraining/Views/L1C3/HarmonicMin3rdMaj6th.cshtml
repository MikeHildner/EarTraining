@{
    ViewBag.Title = "Harmonic Minor 3rd / Major 6th Intervals";
}
<h2>Level 1 Chapter 3</h2>

<h5>@ViewBag.Title</h5>
<hr />

<div class="row">
    <div class="col-md-6">
        @{
            Html.RenderPartial("NewDO");
        }
    </div>
</div>

<hr />

<div class="row toggle-demo" role="group">
    <div class="col-md-6">
        Include drills for
        <div class="switch-toggle alert alert-dark">
            <input id="min3rds" name="intervaltype" type="radio" checked>
            <label for="min3rds" onclick="">Minor 3rds</label>

            <input id="maj6ths" name="intervaltype" type="radio">
            <label for="maj6ths" onclick="">Major 6ths</label>

            <input id="both" name="intervaltype" type="radio">
            <label for="both" onclick="">Both</label>

            <a class="btn btn-primary"></a>
        </div>
    </div>
</div>

<h4>Drill</h4>
<div class="row">
    <div class="col-md-6">
        <figure>
            <figcaption><img class="piano" />Press the play button to hear the interval</figcaption>
            <audio id="audDrill1" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p>Hover over the below to see the interval</p>
        <div class="spoiler" id="drill1"></div>
        <div class="pad-top-10">
            <input type="button" class="btn btn-primary" value="Get a New Interval" onclick="setAudDrill1Src()" />
        </div>
    </div>
</div>
<hr />
<!-- Note that even though this is chapter 3, we're calling methods in chapter 2's controller because the code was already set up there. -->


                    </div>
                </nav>
                <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-maj3rd" role="tabpanel" aria-labelledby="nav-maj3rd-tab">
                        <h4>Prompts</h4>
                        <div class="row">
                            <div class="col-md-4">
                                <p>DO DO MI MI MI</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 0 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>FA FA LA LA SO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 1 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>SO SO TI TI DO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 2 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>TI TI SO SO SO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 3 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>LA LA FA FA MI</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 4 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>MI MI DO DO DO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 5 })' type='audio/mpeg'>
                                </audio>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-min6th" role="tabpanel" aria-labelledby="nav-min6th-tab">
                        <h4>Prompts</h4>
                        <div class="row">
                            <div class="col-md-4">
                                <p>MI MI DO DO DO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 6 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>LA LA FA FA MI</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 7 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>TI TI SO SO SO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 8 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>SO SO TI TI DO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 9 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>FA FA LA LA SO</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 10 })' type='audio/mpeg'>
                                </audio>
                            </div>
                            <div class="col-md-4">
                                <p>DO DO MI MI MI</p>
                                <audio controls preload='none'>
                                    <source src='@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz, type = 11 })' type='audio/mpeg'>
                                </audio>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h4>Drill</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <input type="button" value="Get a New Interval" onclick="setAudDrill1Src()" />
                            <audio id="audDrill1" controls preload='none'>
                                <source src='' type='audio/mpeg'>
                            </audio>
                            <p><span class="spoiler" id="drill1">Putting some text in here just to make it long enough</span></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@section  scripts {
    <script>
        $(document).ready(function () {
            setAudDrill1Src();
        });

        function setAudDrill1Src() {
            var baseSrc = '@Url.Action("GetDrill", "L1C2", new { frequency = ViewBag.Pitch.Hertz })';

            // Find the active tab.
            var activeTab = $('div.tab-pane.active');
            var activeTabId = activeTab.attr('id');

            // Get the drills based on what tab we're on.
            var randomInt;

            switch (activeTabId) {
                case 'nav-maj3rd':
                    randomInt = getRandomInt(0, 5);
                    break;
                case 'nav-min6th':
                    randomInt = getRandomInt(6, 11);
                    break;

                default:
                    var msg = 'activeTabId ' + activeTabId + ' is not supported';
                    console.log(msg);
                    alert(msg);
            }

            var src = baseSrc + '&type=' + randomInt;
            $('#audDrill1').attr('src', src);

            var msg = '';
            switch (randomInt) {
                case 0:
                    msg = msg + 'DO DO MI MI MI (Maj 3rd)';
                    break;
                case 1:
                    msg = msg + 'FA FA LA LA SO (Maj 3rd)';
                    break;
                case 2:
                    msg = msg + 'SO SO TI TI DO (Min3 rd)';
                    break;
                case 3:
                    msg = msg + 'TI TI SO SO SO (Maj 3rd)';
                    break;
                case 4:
                    msg = msg + 'LA LA FA FA MI (Maj 3rd)';
                    break;
                case 5:
                    msg = msg + 'MI MI DO DO DO (Maj 3rd)';
                    break;
                case 6:
                    msg = msg + 'MI MI DO DO DO (Min 6th)';
                    break;
                case 7:
                    msg = msg + 'LA LA LA FA MI (Min 6th)';
                    break;
                case 8:
                    msg = msg + 'TI TI SO SO SO (Min 6th)';
                    break;
                case 9:
                    msg = msg + 'SO SO TI TI DO (Min 6th)';
                    break;
                case 10:
                    msg = msg + 'FA FA LA LA SO (Min 6th)';
                    break;
                case 11:
                    msg = msg + 'DO DO MI MI MI (Min 6th)';
                    break;
            }

            $('#drill1').text(msg);
    }
    </script>
}

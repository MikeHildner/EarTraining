@{
    ViewBag.Title = "Level 1, Chapter 2";
}
<h2>@ViewBag.Title</h2>

<h5>Major 3rd / Minor 6th Intervals</h5>
<hr />

<div class="row">
    <div class="col-md-12">
        <p>Each time this page is refreshed, a new DO is assigned.</p>
        <input type="button" value="Get a New DO" onclick="location.href='@Url.Action("Index", "L1C2")'" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <audio controls preload='none'>
            <source src='@Url.Action("GetDO", "DO", new { frequency = ViewBag.Pitch.Hertz })' type='audio/mpeg'>
        </audio>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p>Hover over the below to reveal your DO.</p>
        <p class="spoiler">Your DO is @ViewBag.Pitch.PitchName - @ViewBag.Pitch.Hertz Hz</p>
    </div>
</div>
<hr />
<section id="tabs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 ">
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-maj3rd-tab" data-toggle="tab" href="#nav-maj3rd" role="tab" aria-controls="nav-maj3rd" aria-selected="true">Major 3rd Intervals</a>

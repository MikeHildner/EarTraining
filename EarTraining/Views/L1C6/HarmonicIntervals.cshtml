@section  scripts {
    <script>
        $(document).ready(function () {
            setAudDrill1Src();

            $('input[type=radio][name=intervaltype]').change(function () {
                setAudDrill1Src();
            });
        });

        function setAudDrill1Src() {
            var baseSrc = '@Url.Action("GetHarmonicDrillEx", "L1C6", new { doNoteName = ViewBag.Pitch.PitchName })';

            // Get the drills based on what the user has choosen.
            var intervalType = $("input[type=radio][name=intervaltype]:checked").attr('id');

            var minDrill;
            var maxDrill;

            switch (intervalType) {
                case 'maj2nds':
                    minDrill = 0;
                    maxDrill = 4;
                    $('#maj2nd-prompts').fadeIn();
                    $('#min7th-prompts').fadeOut();
                    break;

                case 'min7ths':
                    minDrill = 5;
                    maxDrill = 9;
                    $('#maj2nd-prompts').fadeOut();
                    $('#min7th-prompts').fadeIn();
                    break;

                case 'both':
                    minDrill = 0;
                    maxDrill = 9;
                    $('#maj2nd-prompts').fadeIn();
                    $('#min7ths-prompts').fadeIn();
                    break;

                default:
                    var msg = 'intervalType ' + intervalType + ' is not supported';
                    consoleAndAlert(msg);
            }

            var randomInt = randomInt = getRandomInt(minDrill, maxDrill);

            var src = baseSrc + '&type=' + randomInt;
            $('#audDrill1').attr('src', src);

            var msg = '';
            switch (randomInt) {
                case 0:
                    msg = msg + 'DO RE';
                    break;
                case 1:
                    msg = msg + 'RE MI';
                    break;
                case 2:
                    msg = msg + 'FA SO';
                    break;
                case 3:
                    msg = msg + 'SO LA';
                    break;
                case 4:
                    msg = msg + 'LA TI';
                    break;
                case 5:
                    msg = msg + 'RE DO';
                    break;
                case 6:
                    msg = msg + 'MI RE';
                    break;
                case 7:
                    msg = msg + 'SO FA';
                    break;
                case 8:
                    msg = msg + 'LA SO';
                    break;
                case 9:
                    msg = msg + 'TI LA';
                    break;
                default:
                    msg = 'drillType ' + randomInt + ' is not supported';
                    consoleAndAlert(msg);
            }

            $('#drill1').text(msg);
        }

    </script>
}

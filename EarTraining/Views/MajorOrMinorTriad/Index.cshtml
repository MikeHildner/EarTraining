@{
    ViewBag.Title = "Major or Minor Triad";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-12">
        Determine if chord is a major or minor triad.
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>Each time this page is refreshed, a new DO is assigned.</p>
        <input type="button" value="Get a New DO" onclick="location.href='@Url.Action("Index", "MajorOrMinorTriad")'" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <audio controls preload='none'>
            <source src='@Url.Action("GetDO", "MajorOrMinorTriad", new { frequency = ViewBag.Pitch.Hertz })' type='audio/wav'>
        </audio>
        <div class="col-md-12">
            <p>Hover over the below to reveal the DO</p>
            <p class="spoiler">Your DO is <b>@ViewBag.Pitch.PitchName</b> - @ViewBag.Pitch.Hertz Hz</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <input type="button" value="Get a New Chord" onclick="setAudResolutionSrc()" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <audio id="audResolution" controls preload='none'>
            <source src='@Url.Action("GetChord", "MajorOrMinorTriad", new { frequency = ViewBag.Pitch.Hertz })' type='audio/wav'>
        </audio>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p>Hover over the below to reveal the chord</p>
        <p class="spoiler" id="chord">Your chord type here<b>@ViewBag.Chord</b></p>
    </div>
</div>

@section  scripts {
    <script>
        $(document).ready(function () {
            setAudResolutionSrc();
        });

        function setAudResolutionSrc() {
            var baseSrc = '@Url.Action("GetChord", "MajorOrMinorTriad", new { frequency = ViewBag.Pitch.Hertz })';
            var randomInt = getRandomInt(0, 1);
            var src = baseSrc + '&type=' + randomInt;
            $('#audResolution').attr('src', src);

            var msg = 'Your chord is @ViewBag.Chord ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'Major';
                    break;
                case 1:
                    msg = msg + 'Minor';
                    break;
            }

            $('#chord').text(msg);
    }

    </script>
}

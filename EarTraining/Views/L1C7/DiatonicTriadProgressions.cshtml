@section  scripts {
    <script>
        var intervals = [];
        var iterations = 0;
        var maxIterations = 10;

        var delayBeforeProgression2 = 3000;
        var delayBeforeShowModal2 = 5000;
        var delayBeforeHideModal2 = 3000;
        var delayBetweenIterations2 = delayBeforeProgression2 + delayBeforeShowModal2 + delayBeforeHideModal2;

        var delayBeforeProgression3 = 3000;
        var delayBeforeShowModal3 = 8500;
        var delayBeforeHideModal3 = 3000;
        var delayBetweenIterations3 = delayBeforeProgression3 + delayBeforeShowModal3 + delayBeforeHideModal3;

        $(document).ready(function () {
            setAudProgression2Src();
            setAudProgression3Src();

            $('.cb-include').change(function () {
                setAudProgression2Src();
                setAudProgression3Src();
            });

            resetIterationsMessage2();
            resetIterationsMessage3();
        });

        function setAudProgression2Src() {
            $('#spinner2').show();
            var baseSrc = '@Url.Action("Get2ChordProgressionEx", "L1C7", new { doNoteName = ViewBag.Pitch.PitchName })';
            var excluded = getExcluded(null, 0);
            var progressiontype = getRandomInt(0, 5, excluded);
            var src = baseSrc + '&progressiontype=' + progressiontype;
            $('#audProgression2').attr('src', src);

            var msg = '';
            switch (progressiontype) {
                case 0:
                    msg = msg + ' IV (2nd) - I (root)';
                    break;

                case 1:
                    msg = msg + ' ii (root) - V (1st)';
                    break;

                case 2:
                    msg = msg + ' I (2nd) - ii (1st)';
                    break;

                case 3:
                    msg = msg + ' vi (root) - IV (1st)';
                    break;

                case 4:
                    msg = msg + ' I (1st) - V (2nd)';
                    break;

                case 5:
                    msg = msg + ' I (root) - vi (1st)';
                    break;

                default:
                    consoleAndToastr('progression type ' + progressiontype + ' is not supported.');
                    break;
            }

            var doInfo = $('#doSpoiler').text();
            var progressionTable = buildProgressionTable(doInfo, msg);
            $('#progression2').html(progressionTable);
            $('#spinner2').fadeOut("slow");
        }

        function setAudProgression3Src() {
            $('#spinner3').show();
            var baseSrc = '@Url.Action("Get3ChordProgressionEx", "L1C7", new { doNoteName = ViewBag.Pitch.PitchName })';
            var excluded = getExcluded(null, 0);
            var progressiontype = getRandomInt(6, 16, excluded);
            var src = baseSrc + '&progressiontype=' + progressiontype;
            $('#audProgression3').attr('src', src);

            var msg = '';
            switch (progressiontype) {
                case 6:
                msg = msg + ' I (2nd) - ii (1st) - iii (1st)';
                break;

                case 7:
                msg = msg + ' I (1st) - V (2nd) - vi (2nd)';
                break;

                case 8:
                msg = msg + ' IV (2nd) - V (1st) - vi (1st)';
                break;

                case 9:
                msg = msg + ' iii (1st) - I (2nd) - ii (1st)';
                break;

                case 10:
                msg = msg + ' IV (root) - V (2nd) - iii (root)';
                break;

                case 11:
                msg = msg + ' I (root) - ii (2nd) - IV (1st)';
                break;

                case 12:
                msg = msg + ' I (1st) - iii (root) - ii (1st)';
                break;

                case 13:
                msg = msg + ' IV (2nd) - I (root) - V (1st)';
                break;

                case 14:
                msg = msg + ' vi (root) - IV (1st) - I (2nd)';
                break;

                case 15:
                msg = msg + ' V (2nd) - I (root) - ii (root)';
                break;

                case 16:
                msg = msg + ' I (1st) - V (2nd) - IV (root)';
                break;

                default:
                    consoleAndToastr('progression type ' + progressiontype + ' is not supported.');
                    break;
            }

            var doInfo = $('#doSpoiler').text();
            var progressionTable = buildProgressionTable(doInfo, msg);
            $('#progression3').html(progressionTable);
            $('#spinner3').fadeOut("slow");
        }

        function automate2() {
            var buttonText = $("#btnAutomate2").text();
            switch (buttonText) {
                case "Go!":
                    $("#btnAutomate2").text("Stop");
                    playAndShow2();
                    var interval = setInterval(playAndShow2, delayBetweenIterations2);
                    intervals.push(interval);
                    break;

                case "Stop":
                    $("#btnAutomate2").text("Go!");
                    resetIterationsMessage2();
                    clearAllIntervals();
                    break;

                default:
                    alert("'" + buttonText + "' is not supported.");
                    break;
            }
        }

        function playAndShow2() {
            iterations += 1;
            $("#remainingIterations2").text("Playing " + iterations + " of " + maxIterations + " iterations.");

            document.getElementById('doPlayer').play();

            setTimeout(function () {
                setAudProgression2Src();
                $('#audProgression2').trigger("play");
                setTimeout(function () {
                    $("#revealModalBody").html($("#progression2").html());
                    $("#revealModal").modal('show');
                    setTimeout(function () {
                        $("#revealModal").modal('hide');
                        if (iterations == maxIterations) {
                            $("#btnAutomate2").text("Go!");
                            resetIterationsMessage2();
                            iterations = 0;
                            clearAllIntervals();
                        }
                    }, delayBeforeHideModal2);
                }, delayBeforeShowModal2);
            }, delayBeforeProgression2);
        }

        function resetIterationsMessage2() {
            $("#remainingIterations2").text("Automation will stop after " + maxIterations + " iterations.");
        }

        function automate3() {
            var buttonText = $("#btnAutomate3").text();
            switch (buttonText) {
                case "Go!":
                    $("#btnAutomate3").text("Stop");
                    playAndShow3();
                    var interval = setInterval(playAndShow3, delayBetweenIterations3);

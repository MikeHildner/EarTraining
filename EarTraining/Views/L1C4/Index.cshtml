<h4>Drill</h4>

<div class="row">
    <div class="col-md-12">
        <input type="button" value="Get a New Progression" onclick="setAudProgressionSrc()" />
        <figure>
            <figcaption><img class="piano" /></figcaption>
            <audio id="audProgression" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p><span class="spoiler" id="progression">Putting some text in here just to make it long enough</span></p>
    </div>
</div>

@section  scripts {
    <script>
        $(document).ready(function () {
            setAudProgressionSrc();
        });

        function setAudProgressionSrc() {
            var baseSrc = '@Url.Action("GetProgressionEx", "L1C4", new { doNoteName = ViewBag.Pitch.PitchName })';
            var progressiontype = getRandomInt(0, 3);
            var src = baseSrc + '&progressiontype=' + progressiontype;
            $('#audProgression').attr('src', src);

            var msg = 'Your progression is ';
            switch (progressiontype) {
                case 0:
                    msg = msg + 'IV(2nd) - I(root)';
                    break;
                case 1:
                    msg = msg + 'V(1st) - I(root)';
                    break;
                case 2:
                    msg = msg + 'V(root) - IV(root)';
                    break;
                case 3:
                    msg = msg + 'I(root) - IV(2nd)';
                    break;
            }

            $('#progression').text(msg);
        }

    </script>
}

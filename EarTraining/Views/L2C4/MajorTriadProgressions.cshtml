@section  scripts {
    <script>
        $(document).ready(function () {
            setAudProgressionSrc();

            $('.cb-include').change(function () {
                setAudProgressionSrc();
            });
        });

        function setAudProgressionSrc() {
            var baseSrc = '@Url.Action("Get2ChordProgression", "L2C4", new { doNoteName = ViewBag.Pitch.PitchName })';
            var excluded = getExcluded(null, 0);
            var progressiontype = getRandomInt(0, 5, excluded);
            var src = baseSrc + '&progressiontype=' + progressiontype;
            $('#audProgression').attr('src', src);

            var msg = '';
            switch (progressiontype) {
                case 0:
                    msg = msg + 'V (2nd) - I (1st)';
                    break;
                case 1:
                    msg = msg + 'V (1st) - I (root)';
                    break;
                case 2:
                    msg = msg + 'V (root) - I (2nd)';
                    break;
                case 3:
                    msg = msg + 'IV (1st) - I (2nd)';
                    break;
                case 4:
                    msg = msg + 'IV (root) - I (1st)';
                    break;
                case 5:
                    msg = msg + 'IV (2nd) - I (root)';
                    break;
                default:
                    consoleAndAlert("progressiontype '" + progressiontype + "' is not supported.");
                    break;
            }

            var doInfo = $('#doSpoiler').text();
            var progressionTable = buildProgressionTable(doInfo, msg);
            $('#progression').html(progressionTable);
        }

    </script>
}



@{
    ViewBag.Title = "Triad Identification";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        Determine the triad.
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @{
            Html.RenderPartial("NewDO");
        }
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-12">
        <p>Listen to the I triad (root position).</p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <audio controls preload='none'>
            <source src='@Url.Action("GetChord", "TriadIdentification", new { frequency = ViewBag.Pitch.Hertz, type = 0 })' type='audio/mpeg'>
        </audio>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p>Play the random triad.</p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <input type="button" value="Get a New Chord" onclick="setAudChordSrc()" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <audio id="audChord" controls preload='none'>
            <source src='@Url.Action("GetChord", "TriadIdentification", new { frequency = ViewBag.Pitch.Hertz })' type='audio/mpeg'>
        </audio>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p>Hover over the below to reveal the chord</p>
        <div class="spoiler" id="chord"></div>
    </div>
</div>

@section  scripts {
    <script>
        $(document).ready(function () {
            setAudChordSrc();
        });

        function setAudChordSrc() {
            var baseSrc = '@Url.Action("GetChord", "TriadIdentification", new { frequency = ViewBag.Pitch.Hertz })';
            var randomInt = getRandomInt(0, 3);
            var src = baseSrc + '&type=' + randomInt;
            //var randomInt = getRandomInt(0, 2);
            //src = src + '&inversion=' + randomInt;
            $('#audChord').attr('src', src);

            var msg = 'Your chord is @ViewBag.Chord ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'I';
                    break;
                case 1:
                    msg = msg + 'IV';
                    break;
                case 2:
                    msg = msg + 'V';
                    break;
                case 3:
                    msg = msg + 'vi';
                    break;
            }

            $('#chord').text(msg);
    }

    </script>
}
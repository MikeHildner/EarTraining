@section  scripts {
    <script>
        $(document).ready(function () {
            setAudNoteSrc();
            $('.cb-include').change(function () {
                setAudNoteSrc();
            });
        });

        function setAudNoteSrc() {
            var baseSrc = '@Url.Action("GetNoteEx", "L1C1", new { doNoteName = ViewBag.Pitch.PitchName })';
            var excluded = [1, 3, 6, 8, 10];
            excluded = getExcluded(excluded, 0);
            var randomInt = getRandomInt(-1, 12, excluded);
            var src = baseSrc + '&type=' + randomInt;
            $('#audNote').attr('src', src);

            var msg = '';
            switch (randomInt) {
                case -1:
                    msg = msg + 'TI';
                    break;
                case 0:
                    msg = msg + 'DO';
                    break;
                case 2:
                    msg = msg + 'RE';
                    break;
                case 4:
                    msg = msg + 'MI';
                    break;
                case 5:
                    msg = msg + 'FA';
                    break;
                case 7:
                    msg = msg + 'SO';
                    break;
                case 9:
                    msg = msg + 'LA';
                    break;
                case 11:
                    msg = msg + 'TI';
                    break;
                case 12:
                    msg = msg + 'DO';
                    break;
                default:
                    consoleAndAlert('Note type \'' + randomInt + '\' is not supported.');
            }

            $('#note').text(msg);
        }

    </script>
}

@{
    ViewBag.Title = "Pitch Identification";
}

<h2>Level 1 Chapter 1</h2>

<h5>@ViewBag.Title</h5>

<div class="row">
    <div class="col-md-6 card">
        @{
            Html.RenderPartial("NewDO");
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6 card">
        <h4>Drill</h4>
        <figure>
            <figcaption>Press the play button to hear the note</figcaption>
            <audio id="audNote" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p>Hover over the below to reveal the note</p>
        <div class="spoiler" id="note"></div>
        <div class="pad-top-10">
            <input type="button" class="btn btn-primary" value="Get a New Note" onclick="setAudNoteSrc()" />
        </div>
    </div>
</div>


@{
    ViewBag.Title = "Level 1, Chapter 1";
}

<h2>@ViewBag.Title</h2>

<h5>Pitch Identification</h5>
<hr />

<div class="row">
    <div class="col-md-4">
        @{
            Html.RenderPartial("NewDO");
        }
    </div>
</div>

<hr />



<div class="row">
    <div class="col-md-12">
        <h4>Drill</h4>
        <input type="button" value="Get a New Note" onclick="setAudNoteSrc()" />
        <figure>
            <figcaption><img class="piano" /></figcaption>
            <audio id="audNote" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <div class="spoiler" id="note"></div>
    </div>
</div>
<hr />

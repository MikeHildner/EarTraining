    </div>
</section>


@section  scripts {
    <script>
        $(document).ready(function () {
            setAudResolutionSrc();
            setAudNoteSrc();
        });

        function setAudResolutionSrc() {
            var baseSrc = '@Url.Action("GetResolutionEx", "L1C1", new { doNoteName = ViewBag.Pitch.PitchName })';
            var randomInt = getRandomInt(0, 4);
            var src = baseSrc + '&type=' + randomInt;
            $('#audResolution').attr('src', src);

            var msg = 'Your resolution is ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'DO DO RE DO';
                    break;
                case 1:
                    msg = msg + 'DO DO FA MI';
                    break;
                case 2:
                    msg = msg + 'DO DO LA SO';
                    break;
                case 3:
                    msg = msg + 'DO DO TI DO';
                    break;
                case 4:
                    msg = msg + 'DO DO TI DO';
                    break;
                default:
                    consoleAndAlert('Resolution type \'' + randomInt + '\' is not supported.');
            }

            $('#resolution').text(msg);
    }

        function setAudNoteSrc() {
            var baseSrc = '@Url.Action("GetNoteEx", "L1C1", new { doNoteName = ViewBag.Pitch.PitchName })';
            var randomInt = getRandomInt(-1, 12, [1, 3, 6, 8, 10]);
            var src = baseSrc + '&type=' + randomInt;
            $('#audNote').attr('src', src);

            var msg = 'Your note is ';
            switch (randomInt) {
                case -1:
                    msg = msg + 'TI';
                    break;
                case 0:
                    msg = msg + 'DO';
                    break;
                case 2:
                    msg = msg + 'RE';
                    break;
                case 4:
                    msg = msg + 'MI';
                    break;
                case 5:
                    msg = msg + 'FA';
                    break;
                case 7:
                    msg = msg + 'SO';
                    break;
                case 9:
                    msg = msg + 'LA';
                    break;
                case 11:
                    msg = msg + 'TI';
                    break;
                case 12:
                    msg = msg + 'DO';
                    break;
                default:
                    consoleAndAlert('Note type \'' + randomInt + '\' is not supported.');
            }

            $('#note').text(msg);
        }

        //function getRandomInt(min, max) {
        //    min = Math.ceil(min);
        //    max = Math.floor(max);
        //    return Math.floor(Math.random() * (max - min + 1)) + min;
        //}

    </script>
}

@{
    ViewBag.Title = "Pitch Identification";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        Determine the solfeg pitch.
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @{
            Html.RenderPartial("NewDO");
        }
    </div>

    <div class="col-md-6">
        <p>Major scale pitch identification.</p>
        <input type="button" value="Get a New Pitch" onclick="setMajorAudPitchSrc()" />
        <figure>
            <figcaption><img class="piano" /></figcaption>
            <audio id="majorAudPitch" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p>Hover over the below to reveal the pitch</p>
        <div class="spoiler" id="majorPitch"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <p>Minor scale pitch identification.</p>
        <input type="button" value="Get a New Pitch" onclick="setMinorAudPitchSrc()" />
        <figure>
            <figcaption><img class="piano" /></figcaption>
            <audio id="minorAudPitch" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p>Hover over the below to reveal the pitch</p>
        <div class="spoiler" id="minorPitch"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <p>Blues scale pitch identification.</p>
        <input type="button" value="Get a New Pitch" onclick="setBluesAudPitchSrc()" />
        <figure>
            <figcaption><img class="piano" /></figcaption>
            <audio id="bluesAudPitch" controls preload='none'>
                <source src='' type='audio/mpeg'>
            </audio>
        </figure>
        <p>Hover over the below to reveal the pitch</p>
        <div class="spoiler" id="bluesPitch"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

@{
    Html.RenderPartial("AllPitches");
}

@section  scripts {
    <script>
        $(document).ready(function () {
            setMajorAudPitchSrc();
            setMinorAudPitchSrc();
            setBluesAudPitchSrc();
        });

        function setMajorAudPitchSrc() {
            var baseSrc = '@Url.Action("GetPitchEx", "PitchIdentification", new { doNoteName = ViewBag.Pitch.PitchName })';
            var randomInt = getRandomInt(0, 12, [1,3,6,8,10]);
            var src = baseSrc + '&type=' + randomInt;
            $('#majorAudPitch').attr('src', src);

            var msg = 'Your pitch is ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'DO';
                    break;
                case 2:
                    msg = msg + 'RE';
                    break;
                case 4:
                    msg = msg + 'MI';
                    break;
                case 5:
                    msg = msg + 'FA';
                    break;
                case 7:
                    msg = msg + 'SO';
                    break;
                case 9:
                    msg = msg + 'LA';
                    break;
                case 11:
                    msg = msg + 'TI';
                    break;
                case 12:
                    msg = msg + 'DO';
                    break;
                default:
                    alert('Pitch ' + randomInt + ' is not valid for a major scale.');
                    break;

            }

            $('#majorPitch').text(msg);
        }

        function setMinorAudPitchSrc() {
            var baseSrc = '@Url.Action("GetPitchEx", "PitchIdentification", new { doNoteName = ViewBag.Pitch.PitchName })';
            var randomInt = getRandomInt(0, 12, [1,4,6,9,11]);
            var src = baseSrc + '&type=' + randomInt;
            $('#minorAudPitch').attr('src', src);

            var msg = 'Your pitch is ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'Do';
                    break;
                case 2:
                    msg = msg + 'Re';
                    break;
                case 3:
                    msg = msg + 'RI / ME';
                    break;
                case 5:
                    msg = msg + 'FA';
                    break;
                case 7:
                    msg = msg + 'SO';
                    break;
                case 8:
                    msg = msg + 'SI / LE';
                    break;
                case 10:
                    msg = msg + 'LI / TE';
                    break;
                case 12:
                    msg = msg + 'DO';
                    break;
                default:
                    alert('Pitch ' + randomInt + ' is not valid for a minor scale.');
                    break;
            }

            $('#minorPitch').text(msg);
        }

        function setBluesAudPitchSrc() {
            var baseSrc = '@Url.Action("GetPitchEx", "PitchIdentification", new { doNoteName = ViewBag.Pitch.PitchName })';
            var randomInt = getRandomInt(0, 12, [1,2,4,8,9,11]);
            var src = baseSrc + '&type=' + randomInt;
            $('#bluesAudPitch').attr('src', src);

            var msg = 'Your pitch is ';
            switch (randomInt) {
                case 0:
                    msg = msg + 'Do';
                    break;
                case 3:
                    msg = msg + 'RI / ME';
                    break;
                case 5:
                    msg = msg + 'FA';
                    break;
                case 6:
                    msg = msg + 'FI / SE';
                    break;
                case 7:
                    msg = msg + 'SO';
                    break;
                case 10:
                    msg = msg + 'LI / TE';
                    break;
                case 12:
                    msg = msg + 'DO';
                    break;
                default:
                    alert('Pitch ' + randomInt + ' is not valid for a blues scale.');
                    break;
            }

            $('#bluesPitch').text(msg);
        }

    </script>
}
